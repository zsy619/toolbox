                btn.style.background = this.autoMode ? '#ff4500' : '#00d4ff';
                
                this.addLogEntry(this.autoMode ? 'å¯ç”¨è‡ªåŠ¨æ¨¡å¼' : 'åˆ‡æ¢åˆ°æ‰‹åŠ¨æ¨¡å¼', 'build');
            }

