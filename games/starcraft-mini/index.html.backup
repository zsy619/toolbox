            startGameLoop() {
                this.gameStarted = true;
                
                setInterval(() => {
                    if (!this.gamePaused && this.gameStarted) {
                        this.gameTime++;
                        
                        // æ‰§è¡Œæˆ˜æ–—
                        this.performCombat();
                        
                        // AIè¡Œä¸º
                        this.performAI();
                        
                        // æ¸²æŸ“æ›´æ–°
                        this.renderAllUnits();
                        
                        // æ£€æŸ¥èƒœè´Ÿ
                        this.checkVictoryCondition();
                        
                        // è‡ªåŠ¨æ¨¡å¼
                        if (this.autoMode) {
                            this.performAutoActions();
